@page "/about"
@using BlazorApp.Shared
@using BlazorApp.Client.Utils
@inject AppState AppStateStore
@inject BackendApiRepository Api
@inject NavigationManager NavigationManager

<div class="card">
    <div class="card-header">
        <h4>Über Bergfest</h4>
    </div>
    <div class="card-body">
        <p>
            Als weitere Ergänzung zum <a href="https://www.meetupplanner.de/" target="_blank" title="MeetUpPlanner">MeetUpPlanner 
            (Planung von Ausfahrten)</a> wertet Bergfest gefahrene Zeiten auf Strava-Segmenten aus.
        </p>
        <p>
            Die Anwendung ist übrigens als Open Source auf <a href="https://github.com/rbrands/Bergfest" target="_blank">GitHub öffentlich</a> zugänglich.
        </p>
        <p>
            Verbesserungsvorschläge oder funktioniert etwas nicht? Am besten einfach e-mail an "mail@robert-brands.com""
        </p>
        <p class="bg-light font-italic">
            Versionen: Client - @_clientVersion / Functions - @_functionsVersion
        </p>
    </div> 
    <div class="card-footer">
        <a href="/dataprotection">Datenschutz</a> | <a href="/impressum">Impressum</a>
    </div>
</div>

@code {
    private const string _clientVersion = "2023-09-24";
    private string _functionsVersion = "tbd";

    protected override async Task OnInitializedAsync()
    {
        _functionsVersion = await Api.GetFunctionsVersion();
    }

}